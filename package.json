{
  "name": "react-express-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently -k -n client,server -c cyan,green \"npm run dev --workspace client\" \"npm run dev --workspace server\"",
    "dev:client": "npm run dev --workspace client",
    "dev:server": "npm run dev --workspace server",
    "build:client": "npm run build --workspace client",
    "preview:client": "npm run preview --workspace client"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
